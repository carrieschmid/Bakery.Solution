@using ToDoList.Models;

<h1>Orders</h1>
@if (Model.Count == 0)
{
  <p>There are no orders in the list.</p>
}
<ul>
  @foreach (Order order in Model)
  {
    <li><a href='/orders/@item.Id'>@order.Description</a></li>
    <li><a href='/orders/@item.Id'>@order.Price</a></li>
    <li><a href='/orders/@item.Id'>@order.Date</a></li>
  }
</ul>

<li><a href="/orders/new">Add a new item.</a></li>



<form action="/items/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>