@using Bakery.Models;

<h3>Here are all the orders for this vendor:</h3>

<ol>
@foreach (Order item in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@item.Id'>@item.Description</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/items/new'>Add a new orders</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Return to Main Page</a></p>