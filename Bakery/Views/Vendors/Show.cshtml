@using Bakery.Models;

<h3>Here are all the orders for this vendor:</h3>

<ul>
@foreach (Order order in @Model["orders"])
{
  <li>@order.Name</li>
  <li>@order.Description</li>
  <li>@order.Price</li>
  <li>@order.Date</li>
  <br>
}
</ul>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new orders</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
